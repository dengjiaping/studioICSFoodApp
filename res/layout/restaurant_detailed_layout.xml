<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/darkblue"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/restaurant_detailed_info_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:background="@color/blue"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/blue"
            android:gravity="right"
            android:text="菜系："
            android:textColor="@android:color/white"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/restaurant_detailed_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/blue"
            android:gravity="left"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="13sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/blue"
            android:gravity="right"
            android:text="人均："
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/restaurant_detailed_spend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/blue"
            android:gravity="left"
            android:text="价位"
            android:textColor="@android:color/white" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="100dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_address" />
		<LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
			android:orientation="vertical"
	        android:layout_gravity="center_vertical"
	        android:layout_marginLeft="10dp">
	        <TextView
	            android:id="@+id/restaurant_detailed_address"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/white" />
	        <TextView
	            android:id="@+id/restaurant_detailed_business_circle"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/white" />
	        <TextView
	            android:id="@+id/restaurant_detailed_landmark"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="@android:color/white" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/restaurant_detailed_subways" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="30dp"
        android:orientation="horizontal"/>
    
    <com.fax.utils.view.CardTextView 
	    android:id="@+id/restaurant_detailed_preferential"
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="3dp"
        android:background="@color/blue"/>
	<com.fax.utils.view.CardTextView 
	    android:id="@+id/restaurant_detailed_environment"
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="3dp"
        android:background="@color/blue"/>
	<com.fax.utils.view.CardTextView 
	    android:id="@+id/restaurant_detailed_architecture"
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="3dp"
        android:background="@color/blue"/>
	<com.fax.utils.view.CardTextView 
	    android:id="@+id/restaurant_detailed_atmosphere"
	    android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="3dp"
        android:background="@color/blue"/>
	<LinearLayout 
        android:layout_width="match_parent"
       	android:layout_height="wrap_content">
		<TextView 
	        android:id="@+id/restaurant_detailed_roommaxpeople_label"
	        android:layout_width="wrap_content"
	       	android:layout_height="wrap_content"
	       	android:background="@null"
	       	android:padding="7dp"
	       	android:text="@string/roommaxpeople"
	       	android:textColor="@android:color/white"/>
	    <TextView 
	        android:id="@+id/restaurant_detailed_roommaxpeople"
	        android:layout_width="wrap_content"
	       	android:layout_height="wrap_content"
	       	android:background="@null"
	       	android:padding="7dp"
	       	android:textColor="@android:color/white"/>
	</LinearLayout>
	<TextView  
        android:layout_width="match_parent"
       	android:layout_height="wrap_content"
       	android:background="@color/blue"
       	android:layout_marginTop="3dp"
       	android:text="@string/parking_information"
       	android:padding="7dp"
       	android:textSize="19sp"
       	android:textColor="@android:color/white"/>
	<TextView 
        android:id="@+id/restaurant_detailed_parkinginfo"
        android:layout_width="match_parent"
       	android:layout_height="wrap_content"
       	android:background="@null"
       	android:padding="7dp"
       	android:textColor="@android:color/white"/>
	<LinearLayout 
        android:layout_width="match_parent"
       	android:layout_height="wrap_content"
       	android:gravity="left">
	    <TextView 
          	android:layout_width="wrap_content"
	       	android:layout_height="wrap_content"
	       	android:text="@string/costs"
	       	android:padding="7dp"
	       	android:textSize="15sp"
	       	android:textColor="@android:color/white"/>
	    <TextView 
	        android:id="@+id/restaurant_detailed_costs"
            android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:padding="7dp"
        	android:textSize="15sp"
        	android:textColor="@android:color/white"/>
	</LinearLayout>
    <!-- LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_phone" />

        <TextView
            android:id="@+id/restaurant_detailed_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_time" />

        <TextView
            android:id="@+id/restaurant_detailed_business_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ICS_video"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="100dp" />
