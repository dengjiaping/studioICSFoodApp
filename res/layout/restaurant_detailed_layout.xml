    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1" >
            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
            	android:background="#ddffffff"
                android:minWidth="40dp"
                android:button="@null"
                android:clickable="false"
                android:layout_gravity="center"
                android:drawableBottom="@drawable/radiobutton_check"
                android:drawableTop="@drawable/room_icon"
                android:gravity="center"
                android:text="@string/room"
                android:textColor="@color/blue"
                android:textSize="12sp" />
            <TextView
                android:id="@+id/restaurant_detailed_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:textColor="@color/blue"
                android:textSize="10sp" />
        </FrameLayout>

        <RadioButton
            android:id="@+id/restaurant_detailed_wifi"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#ddffffff"
            android:button="@null"
            android:clickable="false"
            android:drawableBottom="@drawable/radiobutton_check"
            android:drawableTop="@drawable/wifi_icon"
            android:gravity="center"
            android:text="@string/wifi"
            android:textColor="@color/blue"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/restaurant_detailed_creditcard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#ddffffff"
            android:button="@null"
            android:clickable="false"
            android:drawableBottom="@drawable/radiobutton_check"
            android:drawableTop="@drawable/creditcard_icon"
            android:gravity="center"
            android:text="@string/creditcard"
            android:textColor="@color/blue"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/restaurant_detailed_takeout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#ddffffff"
            android:button="@null"
            android:clickable="false"
            android:drawableBottom="@drawable/radiobutton_check"
            android:drawableTop="@drawable/takeout_icon"
            android:gravity="center"
            android:text="@string/takeout"
            android:textColor="@color/blue"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/restaurant_detailed_waitingarea"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#ddffffff"
            android:button="@null"
            android:clickable="false"
            android:drawableBottom="@drawable/radiobutton_check"
            android:drawableTop="@drawable/waitingarea_icon"
            android:gravity="center"
            android:text="@string/waitingarea"
            android:textColor="@color/blue"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/restaurant_detailed_accessibility"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#ddffffff"
            android:button="@null"
            android:clickable="false"
            android:drawableBottom="@drawable/radiobutton_check"
            android:drawableTop="@drawable/accessibility_icon"
            android:gravity="center"
            android:text="@string/accessibility"
            android:textColor="@color/blue"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/restaurant_detailed_babychair"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="#ddffffff"
            android:button="@null"
            android:clickable="false"
            android:drawableBottom="@drawable/radiobutton_check"
            android:drawableTop="@drawable/babychair_icon"
            android:gravity="center"
            android:text="@string/babychair"
            android:textColor="@color/blue"
            android:textSize="12sp" />

        <RadioButton
            android:id="@+id/restaurant_detailed_parkinglot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ddffffff"
            android:layout_margin="2dp"
            android:button="@null"
            android:clickable="false"
            android:drawableBottom="@drawable/radiobutton_check"
            android:drawableTop="@drawable/car"
            android:gravity="center"
            android:text="@string/parkinglot"
            android:textColor="@color/blue"
            android:textSize="12sp" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ddffffff"
            android:layout_margin="2dp"
            android:button="@null"
            android:clickable="false"
            android:drawableBottom="@drawable/radiobutton_check"
            android:drawableTop="@drawable/ic_launcher"
            android:textSize="12sp"
            android:visibility="invisible" />

        <RadioButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ddffffff"
            android:layout_margin="2dp"
            android:button="@null"
            android:clickable="false"
            android:drawableBottom="@drawable/radiobutton_check"
            android:drawableTop="@drawable/ic_launcher"
            android:textSize="12sp"
            android:visibility="invisible" />
    </LinearLayout>
	<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
	    <TextView 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/remarks"
        	android:textSize="20sp"
        	android:textColor="@android:color/white"
        	android:padding="7dp"/>
	    <TextView 
	        android:id="@+id/restaurant_detailed_remark"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:text=""
        	android:textColor="@android:color/white"
        	android:padding="7dp"/>
	</LinearLayout>
</LinearLayout>
</ScrollView>