<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white" >

    <ImageView
        android:id="@+id/order_list_image"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/ic_launcher" />
        <TextView
            android:id="@+id/order_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/order_list_image"
            android:layout_margin="5dp"
            android:textColor="@android:color/black"
            android:textSize="17sp" />
        <RelativeLayout
            android:id="@+id/order_list_bottomgroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/order_list_image"
            android:layout_alignBottom="@id/order_list_image"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="15dp">
			<TextView 
			    android:id="@+id/order_list_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="available"
                android:layout_marginLeft="0dp"
                android:textColor="@android:color/black"
                android:textSize="14sp"/>
			<TextView
                android:id="@+id/order_list_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/order_list_number_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/order_list_number"
                android:text="x"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/order_list_image"
            android:layout_above="@id/order_list_bottomgroup"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:gravity="right" >

            <TextView
                android:id="@+id/order_list_total_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ï¿¥"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/order_list_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp" />
        </LinearLayout>
</RelativeLayout>