<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.icsfood.icsfood.MenuListFragment"
    android:orientation="vertical"
    android:background="@color/green">

    <ImageView
        android:id="@+id/restaurant_menu_pushimage"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/restaurant_menu_pushname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/custom_menu"
            android:padding="6dp"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10" />
    </LinearLayout>

    <!-- 只有三项，所以直接写死 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/restaurant_menu_subpushimage_item_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:name="com.icsfood.icsfood.MiddleItemFragment"
            android:layout_weight="10"
            tools:layout="@layout/fragment_middle_item">
            <include layout="@layout/fragment_middle_item"/>
        </LinearLayout>

        <View
            android:layout_width="4dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/restaurant_menu_subpushimage_item_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:name="com.icsfood.icsfood.MiddleItemFragment"
            android:layout_weight="10"
            tools:layout="@layout/fragment_middle_item">
            <include layout="@layout/fragment_middle_item"/>
        </LinearLayout>

        <View
            android:layout_width="4dp"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:id="@+id/restaurant_menu_subpushimage_item_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:name="com.icsfood.icsfood.MiddleItemFragment"
            android:layout_weight="10"
            tools:layout="@layout/fragment_middle_item" >
            <include layout="@layout/fragment_middle_item"/>
       </LinearLayout>
    </LinearLayout>
</LinearLayout>
