<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/green"
    android:orientation="vertical" >
    <com.fax.utils.view.pager.NetImgsViewPager 
        android:id="@+id/view_pager"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1"/>
	<com.fax.utils.view.pager.PointIndicator 
        android:id="@+id/point_indicator"
	    android:layout_width="match_parent"
	    android:layout_height="30dp"
	    android:layout_marginTop="-30dp"
	    android:layout_gravity="center_horizontal"/>
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:padding="6dp">
	    <TextView 
	        android:id="@+id/home_restaurant_name"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	        android:textColor="@android:color/white"
	        android:textSize="20sp"/>
	    <TextView 
	        android:id="@+id/home_restaurant_style"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
	        android:textColor="@android:color/white"
	        android:layout_below="@+id/home_restaurant_name"
	        android:textSize="12sp"/>
	    <RatingBar 
	        android:id="@+id/home_restaurant_expertscore"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
			style="@style/expertRatingBar"
	        android:rating="3"
	        android:numStars="5"
	        android:stepSize="1"
	        android:layout_alignParentRight="true"
	        android:paddingTop="5dp"/>
	    <RatingBar 
	        android:id="@+id/home_restaurant_customerscore"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
			style="@style/customRatingBar"
	        android:rating="3"
	        android:numStars="5"
	        android:stepSize="1"
	        android:layout_alignParentRight="true"
	        android:layout_below="@id/home_restaurant_expertscore"
	        android:paddingTop="5dp"
	        android:layout_marginTop="5dp"/>
	</RelativeLayout>
</LinearLayout>
