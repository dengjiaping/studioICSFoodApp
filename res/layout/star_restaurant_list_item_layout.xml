<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@android:color/white">
    <ImageView
        android:id="@+id/str_retaurant_item_photo"
	    android:layout_width="60dp"
	    android:layout_height="60dp"
	    android:layout_alignParentLeft="true"/>
	<TextView 
		android:id="@+id/str_retaurant_item_name"
		android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="4dp"
	    android:text=""
	    android:textSize="14sp"
	    android:textColor="@color/darkblue"
	    android:layout_alignTop="@id/str_retaurant_item_photo"
	    android:layout_toRightOf="@id/str_retaurant_item_photo"/>
	<TextView 
		android:id="@+id/str_retaurant_item_score_label"
		android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="4dp"
	    android:text=""
	    android:textColor="@color/blue"
	    android:textSize="12sp"
		android:layout_below="@id/str_retaurant_item_name"
		android:layout_alignLeft="@id/str_retaurant_item_name"/>
	<RatingBar
	    android:id="@+id/str_retaurant_item_score"
		style="@style/expertWhiteRatingBar"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:stepSize="1"
	    android:layout_marginLeft="4dp"
	    android:paddingTop="5dp"
	    android:layout_alignTop="@id/str_retaurant_item_score_label"
	    android:layout_toRightOf="@id/str_retaurant_item_score_label"/>
	<TextView
		android:id="@+id/str_retaurant_item_text"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="4dp"
	    android:text=""
	    android:textSize="12sp"
	    android:textColor="@android:color/darker_gray"
	    android:layout_below="@id/str_retaurant_item_score_label"
	    android:layout_toRightOf="@id/str_retaurant_item_photo"/>
</RelativeLayout>