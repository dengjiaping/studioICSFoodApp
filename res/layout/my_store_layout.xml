<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:round="http://schemas.android.com/apk/res/com.org.icsfoodapp"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/blue">
	    <com.fax.utils.view.RoundAngleImageView
			android:id="@+id/store_avator"
			android:layout_margin="1dp"
			android:src="@drawable/menu_ic_person"
			android:layout_weight="0"
			round:roundWidth="40dp"
			round:roundHeight="40dp"
			round:borderWidth="0px"
			round:borderColor="@android:color/transparent"
			android:layout_width="80dp"
			android:layout_height="80dp"/>
        <TextView
			android:id="@+id/store_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_vertical"
            android:text="Xu"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
	</LinearLayout>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="0"
	    android:orientation="vertical">
        <LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<TextView
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
				android:layout_gravity="left"
				android:drawableLeft="@drawable/store_icon"
				android:text="@string/my_activity"
				android:textColor="@color/blue"/>
			<TextView
			    android:id="@+id/store_activity_more"
			    android:layout_width="wrap_content"
				android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:layout_gravity="right"
			    android:gravity="right"
			    android:drawableRight="@drawable/store_more"
			    android:clickable="true"
			    android:text="@string/more"
			    android:textColor="@color/blue"/>
	    </LinearLayout>
        <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content">
			<LinearLayout 
			    android:id="@+id/store_activity1"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="2"
			    android:orientation="vertical"> 
			    <ImageView 
					android:id="@+id/store_activity_image1"
				    android:layout_width="match_parent"
				    android:layout_height="120dp"
				    android:scaleType="centerCrop"/>
			    <TextView 
					android:id="@+id/store_activity_text1"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
			    	android:textColor="@color/blue"/>
			</LinearLayout>
			<LinearLayout 
			    android:id="@+id/store_activity2"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="2"
			    android:orientation="vertical"> 
			    <ImageView 
					android:id="@+id/store_activity_image2"
				    android:layout_width="match_parent"
				    android:layout_height="120dp"
				    android:scaleType="centerCrop"/>
			    <TextView 
					android:id="@+id/store_activity_text2"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
			    	android:textColor="@color/blue"/>
			</LinearLayout>
        </LinearLayout>
	</LinearLayout>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="0"
	    android:orientation="vertical">
        <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content">
		    <TextView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:layout_gravity="left"
				android:drawableLeft="@drawable/store_icon"
			    android:text="@string/my_menu"
			    android:textColor="@color/blue"/>
		    <TextView 
			    android:id="@+id/store_menu_more"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:layout_gravity="right"
			    android:gravity="right"
			    android:drawableRight="@drawable/store_more"
			    android:clickable="true"
			    android:text="@string/more"
			    android:textColor="@color/blue"/>
	    </LinearLayout>
        <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content">
			<LinearLayout 
			    android:id="@+id/store_menu1"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="2"
			    android:orientation="vertical"> 
			    <ImageView 
					android:id="@+id/store_menu_image1"
				    android:layout_width="match_parent"
				    android:layout_height="120dp"
				    android:scaleType="centerCrop"/>
			    <TextView 
					android:id="@+id/store_menu_text1"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
			    	android:textColor="@color/blue"/>
			</LinearLayout>
			<LinearLayout 
			    android:id="@+id/store_menu2"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="2"
			    android:orientation="vertical">
			    <ImageView 
					android:id="@+id/store_menu_image2"
				    android:layout_width="match_parent"
				    android:layout_height="120dp"
				    android:scaleType="centerCrop"/>
			    <TextView 
					android:id="@+id/store_menu_text2"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
			    	android:textColor="@color/blue"/>
			</LinearLayout>
        </LinearLayout>
	</LinearLayout>
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_weight="0"
	    android:orientation="vertical">
        <LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content">
		    <TextView 
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:layout_gravity="left"
				android:drawableLeft="@drawable/store_icon"
			    android:text="@string/my_restaurant"
			    android:textColor="@color/blue"/>
		    <TextView 
			    android:id="@+id/store_restaurant_more"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:layout_gravity="right"
			    android:gravity="right"
			    android:drawableRight="@drawable/store_more"
			    android:clickable="true"
			    android:text="@string/more"
			    android:textColor="@color/blue"/>
	    </LinearLayout>
        <LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content">
			<LinearLayout 
			    android:id="@+id/store_restaurant1"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="2"
			    android:orientation="vertical"> 
			    <ImageView 
					android:id="@+id/store_restaurant_image1"
				    android:layout_width="match_parent"
				    android:layout_height="120dp"
				    android:scaleType="centerCrop"/>
			    <TextView 
					android:id="@+id/store_restaurant_text1"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
			    	android:textColor="@color/blue"/>
			</LinearLayout>
			<LinearLayout 
			    android:id="@+id/store_restaurant2"
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="2"
			    android:orientation="vertical"> 
			    <ImageView 
					android:id="@+id/store_restaurant_image2"
				    android:layout_width="match_parent"
				    android:layout_height="120dp"
				    android:scaleType="centerCrop"/>
			    <TextView 
					android:id="@+id/store_restaurant_text2"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
			    	android:textColor="@color/blue"/>
			</LinearLayout>
        </LinearLayout>
	</LinearLayout>
</LinearLayout>